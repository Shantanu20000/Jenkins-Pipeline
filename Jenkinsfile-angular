pipeline {
    agent any
    stages {
        stage('Pull') {
            steps {
                git 'https://github.com/Shantanu20000/Angular_java_Project.git'
                echo 'Pull Successfully'
            }
        }
        
        stage('Docker Pull & frontend') {
            steps {
                script {
                    withDockerContainer(image: 'shan20000/angular:angular_frontend', toolName: 'Docker') {
                        // Add steps to execute inside the frontend container
                        echo 'Running frontend container'
                    }
                }
            }
        }
        
        stage('Docker Pull & Backend') {
            steps {
                script {
                    withDockerContainer(image: 'shan20000/angular:angular_backend', toolName: 'Docker') {
                        // Add steps to execute inside the backend container
                        echo 'Running backend container'
                    }
                }
            }
        }
    }
}
